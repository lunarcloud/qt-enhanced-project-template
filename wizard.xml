<?xml version="1.0" encoding="UTF-8"?>
<!--
/**************************************************************************
**
** Lunarcloud's Cross-platform Qt App template
**
**
**************************************************************************/
-->

<wizard version="1.2" kind="project"
        class="qt4project" firstpage="10"
        id="A.CrossPlatformApp" category="B.LunarcloudProjects">
    <icon>Qt.png</icon>
    <description>Develop a cross-platform widget-based project. Intended for Windows, Mac OSX, and (K)Ubuntu.</description>
    <displayname>Desktop App (Widget-based) </displayname>;
    <displaycategory>Lunarcloud's Projects</displaycategory>
    <files>
        <file source="main.cpp" openeditor="false"/>
        <file source="resources.qrc" openeditor="false"/>
        <file source="mainwindow.h" openeditor="false"/>
        <file source="mainwindow.cpp" openeditor="true"/>
        <file source="mainwindow.ui" openeditor="false"/>
	
		<!-- Windows 7 stuff -->
		<file source="qtwin/qtwin.h" openeditor="false"/>
		<file source="qtwin/qtwin.cpp" openeditor="false"/>
	    
		<!-- Debian files -->
		<file source="debian/changelog" openeditor="false"/>
		<file source="debian/compat" openeditor="false"/>
		<file source="debian/control" openeditor="false"/>    
		<file source="debian/copyright" openeditor="false"/>
		<file source="debian/rules" openeditor="false"/>
	
		<!-- Icon Files -->
		<file source="icons/application.svg" target="icons/application-%ProjectName%.svg" binary="true" openeditor="false"/>
		<file source="icons/application.png" target="icons/application-%ProjectName%.png" binary="true" openeditor="false"/>
		<file source="icons/application.icns" target="icons/application-%ProjectName%.icns" binary="true" openeditor="false"/>
		<file source="icons/application.ico" target="icons/%ProjectName%.ico" binary="true" openeditor="false"/>
        
		<!--  Misc Files -->
		<file source="application.desktop" target="application-%ProjectName%.desktop" openeditor="false"/>
        <file source="application.rc" target="%ProjectName%.rc" openeditor="false"/>
        <file source="README.txt" openeditor="true"/>
        
		<!-- Project File -->
		<file source="project.pro" target="%ProjectName%.pro" openproject="true" openeditor="true"/>
    </files>
    
    <fieldpagetitle>Project Details</fieldpagetitle>

    <fields>
      
      <field mandatory="true" name="ProductName">
	<fieldcontrol class="QLineEdit" defaulttext="Real Name" />
	<fielddescription>Product Name:</fielddescription>
      </field>
      <field mandatory="true" name="Company">
	<fieldcontrol class="QLineEdit" defaulttext="Business, Inc." />
	<fielddescription>Company:</fielddescription>
      </field>
      <field mandatory="true" name="author">
	<fieldcontrol class="QLineEdit" defaulttext="John Doe" />
	<fielddescription>Author:</fielddescription>
      </field>
      <field mandatory="true" name="email">
	<fieldcontrol class="QLineEdit" defaulttext="you@place.com" />
	<fielddescription>Email:</fielddescription>
      </field>
      <field mandatory="true" name="homepage">
	<fieldcontrol class="QLineEdit" defaulttext="http://plasma.kde.org/" />
	<fielddescription>Homepage:</fielddescription>
      </field>
      <field mandatory="true" name="year">
	<fieldcontrol class="QLineEdit" defaulttext="2011" />
	<fielddescription>Current Year:</fielddescription>
      </field>
      <field mandatory="true" name="short_description">
	<fieldcontrol class="QLineEdit" defaulttext="" />
	<fielddescription>Short Description:</fielddescription>
      </field>
      <field mandatory="true" name="long_description">
	<fieldcontrol class="QPlainTextEdit" defaulttext="" />
	<fielddescription>Long Description:</fielddescription>
      </field>

<field name="license">
	<fieldcontrol name="category_combobox" class="QComboBox" defaultindex="0">
	  <comboentries>
	  
	    <comboentry value="Apache-2.0">
	      <comboentrytext>Apache-2.0</comboentrytext>
	    </comboentry>
	    	   
	    <comboentry value="BSD">
	      <comboentrytext>BSD</comboentrytext>
	    </comboentry>
		   
	    <comboentry value="GFDL">
	      <comboentrytext>GFDL</comboentrytext>
	    </comboentry>
		
        <comboentry value="GPL-2">
	      <comboentrytext>GPL v2</comboentrytext>
	    </comboentry>
	 
	    <comboentry value="GPL-3">
	      <comboentrytext>GPL v3</comboentrytext>
	    </comboentry>
	  
	    <comboentry value="LGPL">
	      <comboentrytext>LGPL</comboentrytext>
	    </comboentry>
	    
	    <comboentry value="Other">
	      <comboentrytext>REPLACEME</comboentrytext>
	    </comboentry>
	    
	  </comboentries>
	</fieldcontrol>
   <fielddescription>License:</fielddescription>
      
    </field>

      <field name="CATEGORY">
	<fieldcontrol name="category_combobox" class="QComboBox" defaultindex="0">
	  <comboentries>
	   
	    <comboentry value="Development;">
	      <comboentrytext>Development</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Education;">
	      <comboentrytext>Education</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Games;">
	      <comboentrytext>Games</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Graphics;">
	      <comboentrytext>Graphics</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Internet;">
	      <comboentrytext>Internet</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Multimedia;">
	      <comboentrytext>Multimedia</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Office;">
	      <comboentrytext>Office</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Settings;">
	      <comboentrytext>Settings</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="System;">
	      <comboentrytext>System</comboentrytext>
	    </comboentry>
	    
	   
	    <comboentry value="Utilities;">
	      <comboentrytext>Utilities</comboentrytext>
	    </comboentry>
	   
	  </comboentries>
	</fieldcontrol>
      <fielddescription>Category:</fielddescription>
    </field>
     <!--
	Show a list of useful libraries to link against(IF PRESENT!)
      -->
      <field name="QtNetwork">
	<fieldcontrol class="QCheckBox" truevalue=" network" falsevalue="" />
	<fielddescription>Link to QtNetwork module</fielddescription>
      </field>
      <field name="QtDBus">
	<fieldcontrol class="QCheckBox" truevalue=" dbus" falsevalue="" />
	<fielddescription>Link to QtDBus module</fielddescription>
      </field>
      <field name="QtSQL">
	<fieldcontrol class="QCheckBox" truevalue=" sql" falsevalue="" />
	<fielddescription>Link to QtSql module</fielddescription>
      </field>
      <field name="QtWebkit">
	<fieldcontrol class="QCheckBox" truevalue=" webkit" falsevalue="" />
	<fielddescription>Link to QtWebkit module</fielddescription>
      </field>
      <field name="OpenGL">
	<fieldcontrol class="QCheckBox" truevalue=" opengl" falsevalue="" />
	<fielddescription>Link to OpenGL</fielddescription>
      </field>
    </fields>
</wizard>
